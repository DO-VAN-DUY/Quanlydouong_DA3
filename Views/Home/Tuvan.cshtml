@{
    ViewBag.Title = "Tuvan";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script type="text/javascript" src="~/Scripts/angularScript/home.js"></script>
<section>
    <div class="silde" style="text-align:center;">
        <img src="~/Content/images/Chăm sóc cây/anh3.jpg">
        <div class="silde-br">
            <b>TƯ VẤN CHĂM SÓC CÂY</b>
        </div>
    </div>
</section>
<section id="row" style="height:1500px">
    <div ng-app="CaycanhApp">
        <div ng-controller="HomeCtrl">
            <div ng-init="Loadtuvan()"></div>
            <div ng-class="appliedClass(item)" ng-repeat="item in listtuvan" class="col-xs-12 col-sm-4 row_list">
                <div class="list_person">
                    <a>
                        <img src="~/Content/images/Chăm sóc cây/{{item.Anh}}" alt="">
                    </a>
                </div>
                <div class="row_content">
                    <a href="../kimtien/Sự thật độc cây kim tiền.html"><h2>{{item.Tentin}}</h2></a><br />
                    <p>
                        {{item.Noidung}}
                    </p>

                </div>
                <div>
                    @Html.ActionLink("Chi Tiết", "stckt", "Home") <span><i class="fa fa-long-arrow-right" aria-hidden="true"></i></span>
                </div>
            </div>
        </div>
    </div>

</section>









